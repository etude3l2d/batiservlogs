rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      allow list: if getUserRole() == 'Admin';
      allow write: if getUserRole() == 'Admin' || request.auth.uid == userId;
    }

    match /customers/{customerId} {
      allow read, list: if request.auth != null && getUserRole() in ['Admin', 'Editor', 'Viewer'];
      allow write: if request.auth != null && getUserRole() in ['Admin', 'Editor'];

      match /sites/{siteId} {
        allow read, list: if request.auth != null && getUserRole() in ['Admin', 'Editor', 'Viewer'];
        allow write: if request.auth != null && getUserRole() in ['Admin', 'Editor'];

        match /orders/{orderId} {
            allow read, list: if request.auth != null && getUserRole() in ['Admin', 'Editor', 'Viewer'];
            allow write: if request.auth != null && getUserRole() in ['Admin', 'Editor'];
        }
      }
    }

    match /specialOptions/{optionId} {
        allow read, list: if request.auth != null && getUserRole() in ['Admin', 'Editor', 'Viewer'];
        allow write: if request.auth != null && getUserRole() in ['Admin', 'Editor'];
    }
  }
}